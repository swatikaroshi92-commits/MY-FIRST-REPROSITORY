#include <iostream>
using namespace std;

int main() 
{
    int n, i, j, temp;
    
    cout << "Enter the number of elements: ";
    cin >> n;

    int arr[n];

    cout << "Enter " << n << " elements:\n";
    for(i = 0; i < n; i++)
    {
        cin >> arr[i];
    }
    for(i = 0; i < n - 1; i++)
    {
        for(j = 0; j < n - i - 1; j++)
        {
            if(arr[j] > arr[j + 1])
            {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }

    cout << "\nElements in Ascending Order:\n";
    for(i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }
    for(i = 0; i < n - 1; i++)
    {
        for(j = 0; j < n - i - 1; j++)
        {
            if(arr[j] < arr[j + 1])
            {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }

    cout << "\n\nElements in Descending Order:\n";
    for(i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
    }

    return 0;
}


/*
====OUTPUT====
Enter the number of elements:5
Enter 5 elements:
64
34
25
12
22

Elements in ascending order:
12 22 25 34 64

Elements in descending order:
64 34 25 22 12

===================
*/

