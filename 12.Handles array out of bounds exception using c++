#include <iostream>
using namespace std;

int main()
{
    int arr[5] = {10, 20, 30, 40, 50};
    int index;

    cout << "Array elements are: ";
    for(int i = 0; i < 5; i++)
        cout << arr[i] << " ";

    cout << "\nEnter the index to access element: ";
    cin >> index;

    try
    {
        if(index < 0 || index >= 5)
        {
            throw index;  
        }

        cout << "Element at index " << index << " is: " << arr[index] << endl;
    }
    catch(int i)
    {
        cout << "Exception caught: Array index out of bounds!" << endl;
    }

    cout << "Program continues after exception handling." << endl;

    return 0;
}
