#include <iostream>
using namespace std;

class Number
{
    int value;

public:
    void getData()
    {
        cout << "Enter a number: ";
        cin >> value;
    }

    void display()
    {
        cout << "Value = " << value << endl;
    }

    void operator-()
    {
        value = -value;
    }
};

int main()
{
    Number obj;

    obj.getData();

    cout << "Before applying unary minus operator:" << endl;
    obj.display();

    -obj;  

    cout << "After applying unary minus operator:" << endl;
    obj.display();

    return 0;
}
