#include <iostream>
using namespace std;

int add(int a, int b)
{
    return a + b;
}

double add(double a, double b)
{
    return a + b;
}

int main()
{
    int int1, int2;
    double double1, double2;

    
    cout << "Enter two integer values: ";
    cin >> int1 >> int2;

  
    cout << "Enter two double values: ";
    cin >> double1 >> double2;

  
    cout << "Sum of integers: " << add(int1, int2) << endl;
    cout << "Sum of doubles: " << add(double1, double2) << endl;

    return 0;
}


====OUTPUT======
Enter two integer values: 5 10
Enter two double values: 2.5 3.7
Sum of integers: 15
Sum of doubles: 6.2
